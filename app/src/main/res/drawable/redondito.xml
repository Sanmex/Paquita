<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="StateListReachable">
<item>
    <shape>
        <gradient
            android:startColor="#047003"
            android:endColor="#ffa800"
            android:angle="270"/>

        <stroke
            android:width="1dp"
            android:color="#ffa800"/>
        <corners
            android:radius="25dp"/>
        <padding
            android:right="10dp"
            android:top="10dp"
            android:bottom="10dp"
            android:left="10dp"/>
    </shape>
</item>

    <item android:state_pressed="true">
        <shape>
     <solid
    android:color="#ffa800"/>
    <stroke
        android:width="1dp"
        android:color="#047003"/>
    <corners
        android:radius="25dp"/>
    <padding
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"
        android:left="10dp"/>

        </shape>
    </item>


</selector>